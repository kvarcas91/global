<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<GridPane fx:controller="main.Controllers.LoginController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          vgap="20" hgap="10" stylesheets="@dark-theme.css" styleClass="login-bg">

      <padding><Insets top="25" bottom="25" left="25" right="25"/> </padding>

   <JFXTextField fx:id="userTextField"
                 GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" labelFloat="true"
                 promptText="Username" styleClass="textField"/>
   <JFXPasswordField GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" labelFloat="true"
                     promptText="Password" styleClass="passwordField"/>
   <JFXButton GridPane.rowIndex="2" GridPane.columnIndex="0" text="Login"  styleClass="btn_login"
              onAction="#pressMe"/>

</GridPane>
