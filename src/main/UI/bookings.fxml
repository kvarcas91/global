            <JFXButton fx:id="previousbookings" text="Previous bookings" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <JFXButton fx:id="futurebookings" text="Future bookings" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        </children>
    </GridPane>
